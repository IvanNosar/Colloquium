<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="actionBarStyle">@style/Base.Widget.AppCompat.Light.ActionBar</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayouts</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.Buttons"
        parent="@style/Widget.MaterialComponents.Button.TextButton">

        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="AppTheme.Buttons.Link"
        parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="AppTheme.TextInputLayouts"
        parent="@style/Widget.Design.TextInputLayout">

        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
